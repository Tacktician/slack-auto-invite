{
  "extends": "airbnb-base",
  "plugins": [
    "node",
    "promise"
  ],
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "version": ">=14.0.0",
        "ignores": [
          "modules"
        ]
      }
    ]
  }
}
